<!DOCTYPE html>
<html>

<head>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-163789633-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-163789633-1');
  </script>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  {{> favicon}}
  {{> css}}
  {{> cookieConsentStyles}}
</head>

<body>
  <!-- #TODO Photo Gallery -->
  {{> header}}
  <div class="container-fluid">
    <div class="row">
      <div class="col text-center">
        <h1 class="display-3 m-4 p-4">Carefield Pleasanton Community Photos</h1>
      </div>
    </div>
    <div class="row" id="gallery" data-toggle="modal" data-target="#lightbox">
      {{#each photos}}
      <div class="col-6 col-md-4 col-lg-3">
        <img class="w-100 p-2" src="{{this.src}}" data-target="#lightbox"
          data-slide-to="{{@index}}" />
      </div>
      {{/each}}
    </div>
  </div>
  <div class="modal fade" id="lightbox" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <p class="h5">Carefield Pleasanton Photos</p>
          <button type="button" class="close" data-dismiss="modal" aria-label="close"><span
              aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              {{#each photos}}
              <li data-target="#carouselIndicators" data-slide-to="{{@index}}" {{#if @first}}class="active"{{/if}}></li>
              {{/each}}
            </ol>
            <div class="carousel-inner">
              {{#each photos}}
              <div class="carousel-item {{#if @first}}active{{/if}}">
                <img src="{{this.src}}" class="d-block w-100" alt="...">
              </div>
              {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  {{> scripts}}
  {{> footer}}
</body>

</html>